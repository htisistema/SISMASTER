#include "inkey.ch"              // constantes de codigos das teclas
*********************************************************
* FUNCAO P/CONSULTAR, INCLUIR, ALTERAR E EXCLUIR CIDADES
*********************************************************
MEMVAR getlist,nivel_acess,cod_operado

FUNCTION saccid(mop,mcida,mempty,muf_f,mcp)
*****************
LOCAL mprg:='SACCID',mtitulo:='CADASTRO DE CIDADES',;
      f7tela,f7tela1,f7lci,f7cci,f7lba,f7cba,f7msele,f7morde,f7men,;
      oconsprod,ocolprod[4],f7i,f7nkey,f7opcao,mcod_cid,mcid,;
      tela1,opcao,mreg,mcid_aux,mcep_cid,muf_cid

MEMVAR mcidade,muf,mcep

IF ! ver_nivel(mprg,mtitulo,'15',nivel_acess,,'AMBIE')
        RETURN NIL
ENDIF
f7lci := f7cci := 0
f7lba := 22
f7cba := 55

op_tela(04,10,29,65,mtitulo)
f7msele := SELE()
f7morde := INDEXORD()
***********************************************
IF ! AbriArq('sacsetup','set');RETURN NIL;ENDIF
IF ! AbriArq('saccli','cli');RETURN NIL;ENDIF
IF ! AbriArq('saccid','cid');RETURN NIL;ENDIF
SELE('cid');ORDSETFOCUS(1)
***********************************************
IF ! EMPTY(mcida)
        IF muf_f = NIL
                cid->(DBSEEK(mcida,.T.))
        ELSE
                cid->(DBSEEK(mcida+muf_f,.T.))
        ENDIF
        IF EOF()
                mcid := mcida
        ENDIF
ENDIF
oconsprod := TBROWSEDB(f7lci,f7cci,f7lba,f7cba)
ocolprod[1] := TBCOLUMNNEW('Cidade',{||cid->cidade})
ocolprod[2] := TBCOLUMNNEW('CEP',{||cid->cep})
ocolprod[3] := TBCOLUMNNEW('UF',{||cid->uf})
ocolprod[4] := TBCOLUMNNEW('Codigo',{||cid->cod_cid})
*ocolprod[2] := TBCOLUMNNEW('Codigo',{||cid->cod_cid})
f7i:=0
FOR f7i=1 TO LEN(ocolprod)
        oconsprod:ADDCOLUMN(ocolprod[f7i])
NEXT
oconsprod:HEADSEP := CHR(196)
oconsprod:COLSEP := CHR(179)
WHILE .T.
        IF mop = '*'
                mensagem('<P>esquisa <I>nclusao <ENTER>p/Alterar e Excluir <ESC>Retornar')
        ELSE
                mensagem('<PGUP> <PGDN> <P>esquisa <I>nclusao <ENTER> Conf. <ESC>Retornar')
        ENDIF
        botao(f7lba+1,f7cci,f7lba+3,f7cba)
        f7nkey := 0
        WHILE f7nkey == 0         //.AND. ! oconsprod:STABLE
                oconsprod:FORCESTABLE()
                f7nkey := INKEY(0)
        ENDDO
        IF f7nkey == K_ESC
                IF ! EMPTY(mcida) .AND. mempty = NIL
                        mcid := mcida
                ELSE
                        mcid := SPACE(20)
                ENDIF
                EXIT
        ELSEIF f7nkey = 73 .OR. f7nkey = 105
                tela1 := SAVESCREEN(01,00,24,79)
                WHILE .T.
                        *************
                        SELE('cid');ORDSETFOCUS(2)
                        //GO BOTT
                        *************
                        mensagem('Digite o Nome da Cidade - <ESC> p/Retornar')
                        mcod_cid := space(7)
                        mcid := SPACE(20)
                        mcep_cid := SPACE(9)
                        muf_cid := SPACE(2)
                        muf := SPACE(2)
                        botao(f7lba+1,f7cci-1,f7lba+3,f7cba+1,,' Inclusao da Cidade ','*')

                        @ f7lba+2,f7cci+3 GET mcid PICT '@!' VALID ver_cidade(mcid,.T.)
                        @ f7lba+2,f7cci+29 GET mcep_cid PICT '@!'
                        @ f7lba+2,f7cci+38 GET muf_cid PICT '@!'
                        @ f7lba+2,f7cci+42 GET mcod_cid PICT '@!'
                        READ
                        IF LASTKEY() = 27
                                RESTSCREEN(01,00,24,79,tela1)
                                GO TOP
                                EXIT
                        ENDIF
                        opcao := 'S'
                        opcao := op_simnao('S','Confirma Inclusao:')
                        IF opcao = 'S'
                                IF ADIREG()
                                        cid-> cod_cid := mcod_cid
                                        cid-> cidade := mcid
                                        cid-> cep    := mcep_cid
                                        cid-> uf     := muf_cid
                                        cid-> cod_ope:= cod_operado
                                        COMMIT
                                        UNLOCK
                                        mreg := RECNO()
                                        RESTSCREEN(01,00,24,79,tela1)
                                        *************
                                        SELE('cid');ORDSETFOCUS(1)
                                        GO mreg
                                        *************
                                        oconsprod := TBROWSEDB(f7lci,f7cci,f7lba-1,f7cba)
                                        ocolprod[1] := TBCOLUMNNEW('Cidade',{||cid->cidade})
                                        ocolprod[2] := TBCOLUMNNEW('CEP',{||cid->cep})
                                        ocolprod[3] := TBCOLUMNNEW('UF',{||cid->uf})
                                        ocolprod[4] := TBCOLUMNNEW('Codigo',{||cid->cod_cid})
                                        f7i:=0
                                        FOR f7i=1 TO LEN(ocolprod)
                                                oconsprod:ADDCOLUMN(ocolprod[f7i])
                                        NEXT
                                        oconsprod:HEADSEP := CHR(196)
                                        oconsprod:COLSEP := CHR(179)
                                        oconsprod:FORCESTABLE()
                                        EXIT
                                ELSE
                                        atencao('Nao foi possivel acessar o Arquivo !!!')
                                        ORDSETFOCUS(3)
                                        LOOP
                                ENDIF
                        ENDIF
                ENDDO
        ELSEIF f7nkey == K_ENTER
                mcod_cid := cid->cod_cid
                IF ! EMPTY(mcida) .AND. EOF()
                        mcid := mcida
                ELSE
                        mcid := cid->cidade
                ENDIF
                mcidade := cid->cidade
                mcid_aux := cid->cidade
                IF EMPTY(mcp)
                        mcp := cid->cep
                ENDIF
                mcep_cid := cid->cep
                muf := cid->uf
                muf_cid := cid->uf
                IF mop = '*'
                        f7opcao := mensagem1('Deseja <A>lterar <E>xcluir:','A','A,E')
                        IF LASTKEY() = 27
                                RESTSCREEN(01,00,24,79,tela1)
                                EXIT
                        ELSEIF f7opcao = 'A'
                                tela1 := SAVESCREEN(01,00,24,79)
                                WHILE .T.
                                        mensagem('Digite o Codigo da Despesa a ser Alterado - <ESC> p/Retornar')
                                        botao(f7lba+1,f7cci-1,f7lba+3,f7cba+1,,' Alteracao Cidade ','*')
                                        @ f7lba+3,f7cci+3 GET mcid PICT '@!'
                                        @ f7lba+3,f7cci+29 GET mcep_cid PICT '@!'
                                        @ f7lba+3,f7cci+38 GET muf_cid PICT '@!'
                                        @ f7lba+3,f7cci+42 GET mcod_cid PICT '@!'
                                        READ
                                        IF LASTKEY() = 27
                                                RESTSCREEN(01,00,24,79,tela1)
                                                GO TOP
                                                EXIT
                                        ENDIF
                                        opcao := op_simnao('S','Confirma Alteracao:')
                                        IF opcao = 'S'
                                                IF ! BLOQREG()
                                                        atencao('Nao foi possivel acessar o Arquivo !!!')
                                                        LOOP
                                                ENDIF
                                                cid-> cod_cid := mcod_cid
                                                cid-> cidade := mcid
                                                cid-> cep    := mcep_cid
                                                cid-> uf     := muf_cid
                                                cid-> cod_ope:= cod_operado
                                                COMMIT
                                                UNLOCK
                                                *************
                                                SELE('cli');ORDSETFOCUS(1)
                                                GO TOP
                                                *************
                                                IF mcid_aux <> mcid
                                                        mensagem('Atualizando os Clientes...Aguarde')
                                                        WHILE ! EOF()
                                                                IF cli->cidade = mcid_aux
                                                                        IF ! BLOQREG()
                                                                                atencao('Nao foi possivel acessar o Arquivo !!!')
                                                                                LOOP
                                                                        ENDIF
                                                                        cli->cidade := mcid
                                                                        DBUNLOCK()
                                                                ENDIF
                                                                SKIP
                                                        END
                                                        DBCOMMITALL()
                                                        DBUNLOCKALL()
                                                ENDIF
                                                SELE('cid');ORDSETFOCUS(1)
                                                RESTSCREEN(01,00,24,79,tela1)
                                                EXIT
                                        ENDIF
                                ENDDO
                        ELSEIF f7opcao = 'E'
                                tela1 := SAVESCREEN(01,00,24,79)
                                WHILE .T.
                                        mensagem('Digite o Codigo da Despesa a ser Excluida - <ESC> p/Retornar')
                                        mcod_cid := 0
                                        mcid := SPACE(20)
                                        botao(f7lba+1,f7cci-1,f7lba+3,f7cba+1,,' Exclusao de Cidades ','*')
                                        setcor(3)
                                        DEVPOS(f7lba+2,f7cci+1);DEVOUT(cid->cidade)
                                        setcor(1)
                                        opcao := op_simnao('N','Confirma Exclusao:')
                                        IF LASTKEY() = 27
                                                UNLOCK
                                                LOOP
                                        ENDIF
                                        IF opcao = 'S'
                                                IF ! BLOQARQ()
                                                        atencao('Nao foi possivel acessar o Arquivo !!!')
                                                        LOOP
                                                ENDIF
                                                DELE
                                                COMMIT
                                                UNLOCK
                                                sr_getconnection():exec("DELETE FROM saccid WHERE SR_DELETED = 'T'",,.f.)
                                                sr_getconnection():exec("COMMIT",,.f.)
                                                RESTSCREEN(01,00,24,79,tela1)
                                                oconsprod := TBROWSEDB(f7lci,f7cci,f7lba-1,f7cba)
                                                ocolprod[1] := TBCOLUMNNEW('Cidade',{||cid->cidade})
                                                ocolprod[2] := TBCOLUMNNEW('CEP',{||cid->cep})
                                                ocolprod[3] := TBCOLUMNNEW('UF',{||cid->uf})
                                                f7i:=0
                                                FOR f7i=1 TO LEN(ocolprod)
                                                        oconsprod:ADDCOLUMN(ocolprod[f7i])
                                                NEXT
                                                oconsprod:HEADSEP := CHR(196)
                                                oconsprod:COLSEP := CHR(179)
                                                oconsprod:FORCESTABLE()
                                                EXIT
                                        ENDIF
                                ENDDO
                        ENDIF
                ELSE
                        CLEAR GETS
                        EXIT
                ENDIF
                oconsprod := TBROWSEDB(f7lci,f7cci,f7lba-1,f7cba)
                ocolprod[1] := TBCOLUMNNEW('Cidade',{||cid->cidade})
                ocolprod[2] := TBCOLUMNNEW('CEP',{||cid->cep})
                ocolprod[3] := TBCOLUMNNEW('UF',{||cid->uf})
                ocolprod[4] := TBCOLUMNNEW('Codigo',{||cid->cod_cid})
                f7i:=0
                FOR f7i=1 TO LEN(ocolprod)
                        oconsprod:ADDCOLUMN(ocolprod[f7i])
                NEXT
                oconsprod:HEADSEP := CHR(196)
                oconsprod:COLSEP := CHR(179)
                oconsprod:FORCESTABLE()
        ELSE
                IF genkey(oconsprod,f7nkey,'cid')
                        oconsprod := TBROWSEDB(f7lci,f7cci,f7lba-1,f7cba)
                        ocolprod[1] := TBCOLUMNNEW('Cidade',{||cid->cidade})
                        ocolprod[2] := TBCOLUMNNEW('CEP',{||cid->cep})
                        ocolprod[3] := TBCOLUMNNEW('UF',{||cid->uf})
                        ocolprod[4] := TBCOLUMNNEW('Codigo',{||cid->cod_cid})
                        f7i:=0
                        FOR f7i=1 TO LEN(ocolprod)
                                oconsprod:ADDCOLUMN(ocolprod[f7i])
                        NEXT
                        oconsprod:HEADSEP := CHR(196)
                        oconsprod:COLSEP := CHR(179)
                        oconsprod:FORCESTABLE()
                ENDIF
        ENDIF
END
SELE(f7msele);IF(f7morde>0,ORDSETFOCUS(f7morde),)
wvw_lclosewindow()
IF f7nkey == K_ESC
        RELEASE ALL
        RETURN mcid
ELSE
        RELEASE ALL
        CLEAR GETS
        RETURN mcid
ENDIF
RETURN NIL
******************************* f i m *********************************************

